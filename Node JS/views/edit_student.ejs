<html>
    <head>
        <meta charset="UTF-8">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar">
            <div class="logo"><b><%=title %></div>
            <ul class="nav-links">
                <div class="menu">
                    <li><a href="/" class="btn btn-danger">Logout</a></li>
                </div>
            </ul>
        </nav>
        <div>
            <form action="/update" method="post" class="addstu">
                <h2>Edit Result</h2>
                <a href="/loginTeacher" >Back</a>
                <input type="hidden" value="<%=user.id %>" name="id">
                
                <div class="container">
                <div class="mb-3">
                    <label for="phone">Roll Number.</label>
                    <input type="text" class="form-control" id="pwd" placeholder="1" value="<%=user.roll_number %>" name="roll_number" required>
                </div>

                <div class="mb-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="John Smith" value="<%=user.name %> " name="name" required>
                </div> 

                <div class="mb-3">
                    <label for="dob">Date of Birth</label>
                    <input type="text" class="form-control" id="dob" placeholder="01-01-2000" value="<%=user.dob %>"" name="dob" required>
                </div> 

                <div class="mb-3">
                    <label for="score">Score</label>
                    <input type="text" class="form-control" id="score" placeholder="100" value="<%=user.score %>"" name="score" required>
                </div> 
                <br/>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/loginTeacher" type="submit" class="btn btn-outline-secondary">Cancel</a>     
            </form>
        </div>
    </body>
</html>