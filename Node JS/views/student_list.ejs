<html>
    <head>
        <meta charset="UTF-8">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    </head>
    <body>
        <nav class="navbar">
            <div class="logo"><%=title %></div>
            <ul class="nav-links">
                <div class="menu">
                    <li><a href="/" class="btn btn-danger">Logout</a></li>
                </div>
            </ul>
        </nav>
        <h1 class = "title" style="text-align: center; margin-top: 30px;">All Students</h1>
        <div class="tableDiv">
            <a href="/add" class="btn btn-primary" type="submit">Add Record</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Roll No.</th>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Score</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <%  users.forEach(function(user) { %>
                    <tr class="head">
                        <th><%= user.id %></th>
                        <th scope="row"><%= user.roll_number %></th>
                        <td><%=user.name %></td>
                        <td><%=user.dob %></td>
                        <td><%=user.score %></td> 
                        <td>
                            <a href="edit/<%= user.id%>" class="fas fa-pen-alt" style='font-size:22px; padding-right: 25px;'></a><span></span>
                            <a href="delete/<%= user.id %>" class="fas fa-trash-alt" style='font-size:22px;color:red'></a>
                        </td>    
                    </tr>
                    <%}) %>
                </tbody>
            </table>
        </div>
    </body>
</html>